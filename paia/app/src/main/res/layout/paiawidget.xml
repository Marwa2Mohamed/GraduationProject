<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <!--    android:background="#008577"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">


        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:format12Hour="hh:mm a"
            android:textSize="45dp"
            android:textColor="#ffffff"/>

        <TextClock
            android:id="@+id/textData"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:format12Hour="dd-MMM-yyyy"
            android:format24Hour="MMM,yyyy\n\thh:mm"
            android:textSize="23dp"
            android:textColor="#ffffff"
            android:fontFamily="serif"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/contact_1"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_contact_phone"
                android:text="Maram"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/contact_2"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_contact_phone"
                android:text="Marwa"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/contact_3"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_contact_phone"
                android:text="Toka"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/contact_4"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_contact_phone"
                android:text="Maram"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/contact_5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_contact_phone"
                android:text="Maram"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textAllCaps="false"/>
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>